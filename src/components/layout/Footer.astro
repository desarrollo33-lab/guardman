---
/**
 * Footer Component
 * 4-column footer with services, solutions, company info, and contact.
 */
import { site } from '@/data/site';
import ConvexLeadForm from '@/components/forms/ConvexLeadForm';
import Container from '@/components/ui/Container.astro';

const currentYear = new Date().getFullYear();
const yearsOfExperience = currentYear - site.founded;

const services = [
  { label: 'Guardias de Seguridad', href: '/servicios/guardias-seguridad' },
  { label: 'Patrullaje de Condominios', href: '/servicios/patrullaje-condominios' },
  { label: 'Alarmas Ajax', href: '/servicios/alarmas-ajax' },
  { label: 'GuardPod', href: '/servicios/guardpod' },
  { label: 'Drones de Seguridad', href: '/servicios/drones-seguridad' },
  { label: 'Control de Acceso', href: '/servicios/control-acceso' },
];

const solutions = [
  { label: 'Condominios', href: '/soluciones/condominios' },
  { label: 'Minería e Industria', href: '/soluciones/mineria' },
  { label: 'Retail y Comercio', href: '/soluciones/retail' },
  { label: 'Construcción', href: '/soluciones/construccion' },
  { label: 'Hotelería', href: '/soluciones/hoteleria' },
  { label: 'Inmobiliaria', href: '/soluciones/inmobiliaria' },
  { label: 'Eventos', href: '/soluciones/eventos' },
  { label: 'Corporativo', href: '/soluciones/corporativo' },
];

const company = [
  { label: 'Sobre Nosotros', href: '/nosotros' },
  { label: 'Cobertura RM', href: '/cobertura' },
  { label: 'Blog', href: '/blog' },
  { label: 'Trabaja con Nosotros', href: '/carreras' },
];

const socialLinks = [
  {
    label: 'Instagram',
    href: site.social.instagram,
    icon: `<path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />`,
  },
  {
    label: 'YouTube',
    href: site.social.youtube,
    icon: `<path fill-rule="evenodd" d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 01-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 01-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 011.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418zM15.194 12L10 15V9l5.194 3z" clip-rule="evenodd" />`,
  },
];
---

<footer class="bg-gray-900 text-gray-300">
  <!-- Contact Section -->
  <div class="border-b border-gray-800 bg-gray-900/50">
    <Container>
      <div class="py-12 md:py-20">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-start">
          {/* Left: Content */}
          <div>
            <h2 class="text-3xl md:text-4xl font-semibold text-white mb-4 tracking-tight">
              ¿Listo para proteger lo que importa?
            </h2>
            <p class="text-gray-400 text-lg mb-8">
              Obtén una propuesta personalizada en minutos. Sin compromisos ni contratos forzosos.
            </p>

            {/* Contact Info */}
            <div class="space-y-4">
              <a href={`tel:${site.phone.replace(/\s/g, '')}`} class="flex items-center gap-4 text-gray-300 hover:text-white transition-colors">
                <div class="w-12 h-12 rounded-xl bg-gray-800 flex items-center justify-center flex-shrink-0 border border-gray-700">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                  </svg>
                </div>
                <div>
                  <div class="text-sm text-gray-500">Teléfono</div>
                  <div class="font-medium">{site.phone}</div>
                </div>
              </a>
              <a href={`mailto:${site.email}`} class="flex items-center gap-4 text-gray-300 hover:text-white transition-colors">
                <div class="w-12 h-12 rounded-xl bg-gray-800 flex items-center justify-center flex-shrink-0 border border-gray-700">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                  </svg>
                </div>
                <div>
                  <div class="text-sm text-gray-500">Email</div>
                  <div class="font-medium">{site.email}</div>
                </div>
              </a>
              <div class="flex items-center gap-4 text-gray-300">
                <div class="w-12 h-12 rounded-xl bg-gray-800 flex items-center justify-center flex-shrink-0 border border-gray-700">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                  </svg>
                </div>
                <div>
                  <div class="text-sm text-gray-500">Ubicación</div>
                  <div class="font-medium">{site.address.city}, {site.address.region}</div>
                </div>
              </div>
            </div>
          </div>

          {/* Right: Contact Form */}
          <div class="bg-gray-800/50 border border-gray-700 rounded-2xl p-6 md:p-8">
            <h3 class="text-xl font-semibold text-white mb-6">Solicitar cotización</h3>
            <ConvexLeadForm client:load source="footer" theme="dark" />
          </div>
        </div>
      </div>
    </Container>
  </div>

  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Column 1: Brand & Description -->
      <div class="lg:col-span-1">
        <!-- Logo -->
        <a
          href="/"
          class="flex items-center gap-3 mb-4"
          aria-label="Guardman - Ir al inicio"
        >
          <img
            src="/images/guardman_logo.png"
            alt="Grupo Guardman"
            class="h-12 w-auto brightness-0 invert"
          />
        </a>

        <p class="text-gray-400 text-sm leading-relaxed mb-6">
          Líderes en seguridad privada en Chile. Más de {yearsOfExperience} años protegiendo
          empresas, eventos y comunidades con tecnología de vanguardia y
          personal certificado.
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-3">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-lg bg-gray-800 hover:bg-gray-700 flex items-center justify-center text-gray-400 hover:text-white transition-colors"
                aria-label={social.label}
              >
                <svg
                  class="w-5 h-5"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <Fragment set:html={social.icon} />
                </svg>
              </a>
            ))
          }
        </div>
      </div>

      <!-- Column 2: Servicios -->
      <div>
        <h3
          class="text-white font-semibold text-sm uppercase tracking-wider mb-4"
        >
          Servicios
        </h3>
        <ul class="space-y-3">
          {
            services.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-gray-400 hover:text-white transition-colors text-sm"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Column 3: Soluciones -->
      <div>
        <h3
          class="text-white font-semibold text-sm uppercase tracking-wider mb-4"
        >
          Soluciones
        </h3>
        <ul class="space-y-3">
          {
            solutions.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-gray-400 hover:text-white transition-colors text-sm"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Column 4: Empresa + Contacto -->
      <div>
        <h3
          class="text-white font-semibold text-sm uppercase tracking-wider mb-4"
        >
          Empresa
        </h3>
        <ul class="space-y-3 mb-6">
          {
            company.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-gray-400 hover:text-white transition-colors text-sm"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>

        <!-- Contact Info -->
        <h3
          class="text-white font-semibold text-sm uppercase tracking-wider mb-4"
        >
          Contacto
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href={`tel:${site.phone.replace(/\s/g, '')}`}
              class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors text-sm"
            >
              <svg
                class="w-4 h-4 flex-shrink-0"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                ></path>
              </svg>
              {site.phone}
            </a>
          </li>
          <li>
            <a
              href={`mailto:${site.email}`}
              class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors text-sm"
            >
              <svg
                class="w-4 h-4 flex-shrink-0"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
              </svg>
              {site.email}
            </a>
          </li>
          <li class="flex items-start gap-2 text-gray-400 text-sm">
            <svg
              class="w-4 h-4 flex-shrink-0 mt-0.5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
              ></path>
            </svg>
            <span>{site.address.city}, {site.address.country}<br />{site.address.region}</span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-gray-500 text-sm">
          &copy; {currentYear} Guardman Chile. Todos los derechos reservados.
        </p>
        <div class="flex items-center gap-6 text-sm">
          <a
            href="/privacidad"
            class="text-gray-500 hover:text-gray-300 transition-colors"
          >
            Política de Privacidad
          </a>
          <a
            href="/terminos"
            class="text-gray-500 hover:text-gray-300 transition-colors"
          >
            Términos de Servicio
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
