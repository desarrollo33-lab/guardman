---
import Container from '../ui/Container.astro';
import Button from '../ui/Button.astro';
import Icon from '../ui/Icon.astro';

interface Props {
  title: string;
  subtitle: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  backgroundImage?: string;
  backgroundVideo?: string;
  align?: 'left' | 'center' | 'right';
  size?: 'sm' | 'md' | 'lg' | 'full';
}

const {
  title,
  subtitle,
  primaryCta,
  secondaryCta,
  backgroundImage,
  backgroundVideo,
  align = 'left',
  size = 'lg',
} = Astro.props;

const alignClasses = {
  left: 'text-left',
  center: 'text-center mx-auto',
  right: 'text-right ml-auto',
};

const sizeClasses = {
  sm: 'min-h-[50vh]',
  md: 'min-h-[70vh]',
  lg: 'min-h-[85vh]',
  full: 'min-h-screen',
};
---

<section
  class={`relative ${sizeClasses[size]} flex items-center bg-gray-900 overflow-hidden`}
>
  {/* Background */}
  {
    backgroundImage && (
      <div class="absolute inset-0 z-0">
        <img
          src={backgroundImage}
          alt=""
          class="w-full h-full object-cover opacity-40 transition-transform duration-1000 hover:scale-105"
          loading="eager"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-900/80 to-transparent" />
      </div>
    )
  }

  {/* Content */}
  <Container class="relative z-10 w-full px-4">
    <div class={`max-w-4xl ${alignClasses[align]}`}>
      <h1
        class="text-4xl md:text-5xl lg:text-7xl font-bold text-white mb-6 leading-tight tracking-tight drop-shadow-lg"
      >
        {title}
      </h1>
      <p
        class="text-lg md:text-2xl text-gray-200 mb-10 max-w-2xl leading-relaxed drop-shadow-md"
      >
        {subtitle}
      </p>

      {/* CTAs */}
      {
        (primaryCta || secondaryCta) && (
          <div
            class="flex flex-wrap gap-4"
          >
            {primaryCta && (
              <Button href={primaryCta.href} variant="primary" size="lg" class="shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all">
                {primaryCta.text}
              </Button>
            )}
            {secondaryCta && (
              <Button
                href={secondaryCta.href}
                variant="outline"
                size="lg"
                class="border-white text-white hover:bg-white hover:text-gray-900 shadow-lg backdrop-blur-sm"
              >
                {secondaryCta.text}
              </Button>
            )}
          </div>
        )
      }
    </div>
  </Container>

  {/* Scroll Indicator */}
  {
    size === 'full' && (
      <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce z-20">
        <Icon name="chevronDown" class="w-8 h-8 text-white/70" />
      </div>
    )
  }
</section>
