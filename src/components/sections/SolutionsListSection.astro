---
/**
 * SolutionsListSection Component
 * Displays a grid of solution cards with "Estrategia" badges.
 * Used on service detail pages to show strategic approaches.
 */

import Section from '../ui/Section.astro';
import Container from '../ui/Container.astro';

interface Props {
  title?: string;
  subtitle?: string;
  solutions: string[];
  columns?: 2 | 3;
  background?: 'white' | 'gray';
  class?: string;
}

const {
  title = 'Nuestra Respuesta',
  subtitle,
  solutions,
  columns = 3,
  background = 'gray',
  class: className = '',
} = Astro.props;

const gridCols = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-3',
};
---

<Section background={background} class={className}>
  <Container>
    {/* Header */}
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      {subtitle && (
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          {subtitle}
        </p>
      )}
    </div>

    {/* Solutions Grid */}
    <div class:list={['grid gap-6', gridCols[columns]]}>
      {solutions.map((solution) => (
        <div class="bg-white p-8 rounded-xl border border-gray-100 hover:shadow-xl transition-shadow">
          <div class="inline-flex items-center gap-2 px-3 py-1 bg-gray-900 text-white text-[10px] uppercase tracking-widest font-bold rounded mb-6">
            Estrategia
          </div>
          <p class="text-gray-900 font-semibold leading-relaxed">
            {solution}
          </p>
        </div>
      ))}
    </div>
  </Container>
</Section>
