---
/**
 * ClientsGrid Section - Monochromatic Design
 * Displays client logos in a grid.
 * Inspired by Porsche.com and Ajax.systems - minimal, premium feel.
 */

import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import Icon from '@/components/ui/Icon.astro';

// Client data
const clients = [
  {
    name: 'Marriott',
    industry: 'Hospitality & Events',
    icon: 'building',
    quote: 'Seguridad impecable 24/7 para nuestros huéspedes.',
    image: 'https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80',
  },
  {
    name: 'Kavak',
    industry: 'Automotriz & Retail',
    icon: 'car',
    quote: 'Control de acceso eficiente y sin fricción.',
    image: 'https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80',
  },
  {
    name: 'Cencosud',
    industry: 'Retail & Shopping',
    icon: 'shopping-bag',
    quote: 'Respuesta inmediata ante cualquier incidente.',
    image: 'https://images.unsplash.com/photo-1441986300917-64674bd600d8?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80',
  },
  {
    name: 'Walmart',
    industry: 'Logística & Supply',
    icon: 'truck',
    quote: 'Tecnología de punta en monitoreo remoto.',
    image: 'https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80',
  },
  {
    name: 'BHP',
    industry: 'Minería',
    icon: 'factory',
    quote: 'Estándares rigurosos para zonas críticas.',
    image: 'https://images.unsplash.com/photo-1578321880920-6aac783f33bf?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80',
  },
  {
    name: 'Santander',
    industry: 'Banca & Oficinas',
    icon: 'briefcase',
    quote: 'Confianza y profesionalismo en cada sucursal.',
    image: 'https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80',
  },
  {
    name: 'U. Católica',
    industry: 'Educación',
    icon: 'academic-cap',
    quote: 'Ambiente seguro para nuestros estudiantes.',
    image: 'https://images.unsplash.com/photo-1541339907198-e08756dedf3f?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80',
  },
  {
    name: 'Almagro',
    industry: 'Residencial',
    icon: 'home',
    quote: 'Tranquilidad total para la comunidad.',
    image: 'https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80',
  },
];
---

<Section id="clientes" background="white">
  <Container>
    {/* Section Header */}
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-semibold text-gray-900 mb-4 tracking-tight">
        Clientes que confían en nosotros
      </h2>
      <p class="text-gray-500 max-w-2xl mx-auto text-lg">
        Protegemos a las empresas más importantes de Chile con estándares de seguridad internacionales.
      </p>
    </div>

    {/* Clients Grid */}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {clients.map((client, index) => (
        <div
          class="group bg-white rounded-xl overflow-hidden border border-gray-200 hover:border-gray-400 transition-all duration-300 hover:-translate-y-1"
          style={`animation-delay: ${index * 0.05}s`}
        >
          {/* Client Image */}
          <div class="relative h-32 overflow-hidden">
            <img 
              src={client.image}
              alt={client.name}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            
            {/* Icon Badge */}
            <div class="absolute bottom-3 left-3 w-10 h-10 rounded-lg bg-white flex items-center justify-center">
              <Icon name={client.icon} size="md" color="dark" />
            </div>
          </div>

          {/* Content */}
          <div class="p-5">
            {/* Client Name */}
            <h3 class="text-lg font-semibold text-gray-900 group-hover:text-gray-600 transition-colors mb-1">
              {client.name}
            </h3>

            {/* Industry */}
            <p class="text-xs text-gray-400 uppercase tracking-wide mb-3">
              {client.industry}
            </p>

            {/* Quote */}
            <p class="text-gray-600 text-sm leading-relaxed">
              "{client.quote}"
            </p>
          </div>
        </div>
      ))}
    </div>
  </Container>
</Section>
