---
/**
 * ServicesGrid Section
 * Displays services in a grid using the unified FeatureCard component.
 */

import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import FeatureCard from '@/components/ui/FeatureCard.astro';

interface Service {
  slug: string;
  title: string;
  description: string;
  icon: string;
  [key: string]: any;
}

interface Props {
  services: Service[];
  title?: string;
  subtitle?: string;
  columns?: 2 | 3;
  showAllLink?: boolean;
  background?: 'white' | 'gray' | 'primary' | 'dark';
}

const {
  services,
  title = 'Nuestros Servicios',
  subtitle = 'Soluciones integrales de seguridad',
  columns = 3,
  showAllLink = true,
  background = 'white',
} = Astro.props;

// Service images mapping
// Service images mapping
const serviceImages: Record<string, { url: string; alt: string }> = {
  'guardias-seguridad': {
    url: 'https://images.unsplash.com/photo-1521791055366-0d553872125f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Guardia de seguridad profesional',
  },
  'patrullaje-condominios': {
    url: 'https://images.unsplash.com/photo-1449965408869-eaa3f722e40d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Vehículo de patrullaje',
  },
  'alarmas-ajax': {
    url: 'https://images.unsplash.com/photo-1558002038-1055907df827?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Panel de alarma',
  },
  'guardpod': {
    url: 'https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Módulo de seguridad',
  },
  'drones-seguridad': {
    url: 'https://images.unsplash.com/photo-1473968512647-3e447244af8f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Drone de vigilancia',
  },
  'control-acceso': {
    url: 'https://images.unsplash.com/photo-1563986768609-322da13575f3?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Sistema de control de acceso',
  },
};

// Services that are exclusive
const exclusiveServices = ['guardpod'];

// Get image for service
function getServiceImage(slug: string) {
  return serviceImages[slug] || {
    url: 'https://images.unsplash.com/photo-1558002038-1055907df827?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
    alt: 'Servicio de seguridad',
  };
}
---

<Section id="servicios" background={background}>
  <Container>
    {/* Section Header */}
    <div class="mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-semibold text-gray-900 mb-4 tracking-tight">
        {title}
      </h2>
      <p class="text-gray-500 max-w-2xl text-lg">
        {subtitle}
      </p>
    </div>

    {/* Services Grid */}
    <div
      class:list={[
        'grid gap-6 md:gap-8',
        columns === 2 ? 'md:grid-cols-2' : 'md:grid-cols-2 lg:grid-cols-3',
      ]}
    >
      {
        services.map((service) => {
          const image = service.image ? { url: service.image, alt: service.title } : getServiceImage(service.slug);
          const isExclusive = exclusiveServices.includes(service.slug);
          
          return (
            <FeatureCard
              title={service.title}
              description={service.description}
              image={image.url}
              imageAlt={image.alt}
              icon={service.icon}
              href={`/servicios/${service.slug}`}
              badge={isExclusive ? 'Exclusivo' : undefined}
              linkText="Conocer servicio"
            />
          );
        })
      }
    </div>

    {/* View All Link */}
    {
      showAllLink && (
        <div class="text-center mt-12">
          <a
            href="/servicios"
            class="inline-flex items-center gap-2 px-6 py-3 bg-gray-100 hover:bg-gray-900 hover:text-white text-gray-900 font-medium rounded-xl transition-all duration-300"
          >
            Ver todos los servicios
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"/>
            </svg>
          </a>
        </div>
      )
    }
  </Container>
</Section>
