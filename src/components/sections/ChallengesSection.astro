---
/**
 * ChallengesSection Component
 * Displays operational challenges in a grid of cards with icons.
 * Used on service detail pages to highlight pain points.
 */

import Icon from '../ui/Icon.astro';
import Section from '../ui/Section.astro';
import Container from '../ui/Container.astro';

interface Props {
  title?: string;
  subtitle?: string;
  challenges: string[];
  columns?: 2 | 3;
  background?: 'white' | 'gray';
  class?: string;
}

const {
  title = 'Desaf√≠os operacionales',
  subtitle,
  challenges,
  columns = 3,
  background = 'white',
  class: className = '',
} = Astro.props;

const gridCols = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-3',
};
---

<Section background={background} class={className}>
  <Container>
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      {subtitle && (
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          {subtitle}
        </p>
      )}
    </div>

    <div class={`grid gap-6 ${gridCols[columns]}`}>
      {challenges.map((challenge) => (
        <div class="group p-8 rounded-xl border border-gray-100 hover:border-black transition-all duration-300">
          <div class="w-10 h-10 rounded-lg bg-gray-50 flex items-center justify-center mb-6 group-hover:bg-black group-hover:text-white transition-colors">
            <Icon name="shield-check" size="sm" />
          </div>
          <p class="text-gray-600 leading-relaxed font-medium">{challenge}</p>
        </div>
      ))}
    </div>
  </Container>
</Section>
