---
/**
 * Container Component
 * Responsive max-width container with consistent horizontal padding.
 */

interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  class?: string;
}

const { size = 'lg', class: className = '' } = Astro.props;

const sizeClasses = {
  sm: 'max-w-3xl', // 768px
  md: 'max-w-5xl', // 1024px
  lg: 'max-w-7xl', // 1280px
  xl: 'max-w-screen-2xl', // 1536px
  full: 'max-w-full',
};
---

<div
  class:list={[
    'mx-auto w-full px-4 sm:px-6 lg:px-8',
    sizeClasses[size],
    className,
  ]}
>
  <slot />
</div>
