---
/**
 * Blog Index Page - Guardman Chile
 * Lists all blog articles with title, description, date, and image.
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import Icon from '@/components/ui/Icon.astro';
import Breadcrumbs from '@/components/ui/Breadcrumbs.astro';
import { getCollection } from 'astro:content';

// Fetch all blog posts and sort by pubDate descending
const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Page metadata
const pageTitle = 'Blog de Seguridad Privada en Chile | Guardman';
const pageDescription = 'Artículos y noticias sobre seguridad privada en Santiago, tecnología de protección, alarmas Ajax y consejos de seguridad para empresas y condominios.';

// Format date to Spanish locale
function formatDate(date: Date): string {
  return date.toLocaleDateString('es-CL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Section id="blog" background="white">
    <Container class="relative z-20">
      <Breadcrumbs items={[{ name: 'Blog' }]} />

      <div class="max-w-4xl">
        {/* Page Header */}
        <div class="text-center mb-12 md:mb-16">
          <span class="inline-block px-4 py-1.5 rounded-full bg-gray-900/10 text-gray-900 text-sm font-semibold mb-4">
            Blog
          </span>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Noticias y Artículos
          </h1>
          <p class="text-gray-600 max-w-2xl mx-auto text-lg">
            Mantente informado sobre seguridad privada, tecnología y mejores prácticas de protección
          </p>
        </div>
      </div>

      {/* Posts Grid */}
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
          {posts.map((post, index) => (
            <a
              href={`/blog/${post.slug}`}
              class="group bg-white rounded-2xl border border-gray-200 hover:border-gray-900/30 overflow-hidden transition-all duration-300 hover:shadow-elevated hover:-translate-y-1"
            >
              {/* Image */}
              {post.data.image ? (
                <div class="aspect-video bg-gray-100 overflow-hidden">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              ) : (
                <div class="aspect-video bg-gradient-to-br from-gray-900 to-black flex items-center justify-center">
                  <svg class="w-16 h-16 text-white/30" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                  </svg>
                </div>
              )}

              {/* Content */}
              <div class="p-6">
                {/* Date */}
                <time class="text-sm text-gray-500 mb-2 block">
                  {formatDate(post.data.pubDate)}
                </time>

                {/* Title */}
                <h2 class="text-xl font-bold text-gray-900 group-hover:text-gray-600 transition-colors mb-3 line-clamp-2">
                  {post.data.title}
                </h2>

                {/* Description */}
                <p class="text-gray-600 text-sm leading-relaxed line-clamp-3 mb-4">
                  {post.data.description}
                </p>

                {/* Author */}
                <div class="flex items-center gap-2 text-sm text-gray-500">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                  </svg>
                  <span>{post.data.author}</span>
                </div>

                {/* Read More */}
                <div class="flex items-center gap-2 text-gray-900 font-semibold text-sm mt-4 group-hover:gap-3 transition-all">
                  <span>Leer más</span>
                  <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"/>
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-gray-100 flex items-center justify-center">
            <svg class="w-10 h-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <h2 class="text-xl font-semibold text-gray-900 mb-2">
            Próximamente
          </h2>
          <p class="text-gray-600 max-w-md mx-auto">
            Estamos preparando artículos interesantes sobre seguridad y tecnología. Vuelve pronto.
          </p>
        </div>
      )}
    </Container>
  </Section>
</BaseLayout>
