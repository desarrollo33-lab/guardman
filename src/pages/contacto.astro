---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/ui/Container.astro';
import Breadcrumbs from '../components/ui/Breadcrumbs.astro';
import ConvexContactForm from '../components/forms/ConvexContactForm';
import { site, getWhatsAppUrl, getPhoneLink, getEmailLink } from '../data/site';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  name: `Contacto - ${site.name}`,
  description:
    'Cotiza servicios de seguridad privada en Chile. Guardias OS10, alarmas Ajax, patrullaje de condominios.',
  mainEntity: {
    '@type': 'LocalBusiness',
    name: site.name,
    telephone: site.phone,
    email: site.email,
    address: {
      '@type': 'PostalAddress',
      streetAddress: site.address.street,
      addressLocality: site.address.city,
      addressRegion: site.address.region,
      postalCode: site.address.postalCode,
      addressCountry: 'CL',
    },
  },
};
---

<BaseLayout
  title="Contacto — Seguridad Privada en Santiago | Guardman Chile"
  description="Cotiza tu servicio de seguridad privada en Santiago y Región Metropolitana. Guardias OS10, alarmas Ajax, patrullaje de condominios. Respuesta en 24 horas."
  schema={schema}
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-black py-20 md:py-32">
    <!-- Background layer -->
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-black/80 z-10"></div>
      <img 
        src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80" 
        alt="Contacto Guardman"
        class="w-full h-full object-cover grayscale opacity-30"
      />
    </div>
    
    <Container class="relative z-20">
      <Breadcrumbs items={[{ name: 'Contacto' }]} />

      <div class="max-w-4xl mx-auto text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/5 border border-white/10 backdrop-blur-sm mb-8">
          <span class="w-1.5 h-1.5 rounded-full bg-white animate-pulse"></span>
          <span class="text-xs text-white/70 uppercase tracking-widest font-medium">Asesoría Táctica Inmediata</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-semibold text-white mb-6 tracking-tight leading-[1.1]">
          Cotice su<br/>
          <span class="text-white/40 italic">seguridad</span>
        </h1>

        <p class="text-lg md:text-xl text-white/50 mb-0 max-w-2xl mx-auto leading-relaxed">
          Proteja sus activos con soluciones de alto estándar. 
          Respondemos a sus requerimientos con despliegue inmediato.
        </p>
      </div>
    </Container>
  </section>

  <!-- Contact Section -->
  <section class="py-24 bg-white">
    <Container>
      <div class="grid lg:grid-cols-2 gap-20 items-start">
        <!-- Form Column -->
        <div class="bg-gray-50 p-8 md:p-12 rounded-2xl border border-gray-100">
          <div class="mb-10">
            <h2 class="text-2xl font-bold text-gray-900 mb-2 uppercase tracking-widest">Canal Directo</h2>
            <p class="text-sm text-gray-500">Complete el formulario y un consultor táctico le contactará.</p>
          </div>
          <ConvexContactForm client:load />
        </div>

        <!-- Info Column -->
        <div class="space-y-12">
          <div>
            <h2 class="text-xl font-bold text-gray-900 mb-8 uppercase tracking-widest border-b border-gray-100 pb-4">
              Información de Enlace
            </h2>

            <div class="grid gap-6">
              <!-- Phone -->
              <a href={getPhoneLink()} class="flex items-center gap-6 group">
                <div class="w-12 h-12 rounded-lg bg-gray-900 text-white flex items-center justify-center transition-transform group-hover:scale-110">
                   <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-[10px] text-gray-400 font-bold uppercase tracking-[0.2em] mb-1">Teléfono</p>
                  <p class="text-lg font-semibold text-gray-900 group-hover:text-gray-600 transition-colors">{site.phone}</p>
                </div>
              </a>

              <!-- Email -->
              <a href={getEmailLink()} class="flex items-center gap-6 group">
                <div class="w-12 h-12 rounded-lg bg-gray-900 text-white flex items-center justify-center transition-transform group-hover:scale-110">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-[10px] text-gray-400 font-bold uppercase tracking-[0.2em] mb-1">Email</p>
                  <p class="text-lg font-semibold text-gray-900 group-hover:text-gray-600 transition-colors">{site.email}</p>
                </div>
              </a>

              <!-- Address -->
              <div class="flex items-center gap-6">
                <div class="w-12 h-12 rounded-lg bg-gray-900 text-white flex items-center justify-center">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-[10px] text-gray-400 font-bold uppercase tracking-[0.2em] mb-1">Centro de Operaciones</p>
                  <p class="text-lg font-semibold text-gray-900">{site.address.street}, {site.address.city}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Hours -->
          <div class="border-t border-gray-100 pt-10">
            <h3 class="text-[10px] font-bold text-gray-400 uppercase tracking-[0.3em] mb-6 flex items-center gap-3">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Disponibilidad de Servicio
            </h3>
            <div class="grid gap-4 max-w-sm">
              <div class="flex justify-between items-center text-sm border-b border-gray-50 pb-2">
                <span class="text-gray-500">Administración</span>
                <span class="font-semibold text-gray-900">Lunes a Viernes 9:00 - 18:00</span>
              </div>
              <div class="flex justify-between items-center text-sm border-b border-gray-50 pb-2">
                <span class="text-gray-500">Módulo de Emergencias</span>
                <span class="font-semibold text-gray-900 uppercase tracking-widest text-xs bg-black text-white px-2 py-0.5 rounded">Activo 24/7</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- WhatsApp Section -->
  <section class="py-24 bg-black overflow-hidden relative">
    <!-- Decorative background -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-white rounded-full blur-[120px] -translate-y-1/2 translate-x-1/2"></div>
    </div>

    <Container class="relative">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-5xl font-semibold text-white mb-8 tracking-tight">
          Enlace táctico <span class="text-white/40 italic">inmediato</span>
        </h2>
        <p class="text-lg md:text-xl text-white/50 mb-12 leading-relaxed">
          Inicie una conversación directa con nuestro centro de operaciones para una asesoría rápida.
        </p>
        <a
          href={getWhatsAppUrl('Hola, necesito información estratégica sobre servicios de seguridad')}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-4 px-12 py-5 bg-white text-black font-bold rounded-lg hover:bg-gray-100 transition-all duration-300 uppercase tracking-widest text-xs"
        >
          Canal WhatsApp
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
          </svg>
        </a>
      </div>
    </Container>
  </section>
</BaseLayout>

