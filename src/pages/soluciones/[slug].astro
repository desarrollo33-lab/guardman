---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import Button from '@/components/ui/Button.astro';
import Card from '@/components/ui/Card.astro';
import Icon from '@/components/ui/Icon.astro';
import Breadcrumbs from '@/components/ui/Breadcrumbs.astro';
import ChallengesSection from '@/components/sections/ChallengesSection.astro';
import SolutionsListSection from '@/components/sections/SolutionsListSection.astro';
import RelatedServicesSection from '@/components/sections/RelatedServicesSection.astro';
import CTASection from '@/components/sections/CTASection.astro';
import { convexServer } from '@/lib/convex';
import { api } from '@convex/_generated/api';
import { site } from '@/data/site';

// SSR: fetch solution by slug and all services from Convex
const { slug } = Astro.params;
let solution = null;

try {
  solution = await convexServer.query(api.solutions.getSolutionBySlug, { slug: slug! });
} catch (e) {
  console.error('Error fetching solution:', e);
}

if (!solution) {
  return Astro.redirect('/soluciones');
}

const safeSolution = solution!;

let allServices = [];
try {
  allServices = await convexServer.query(api.services.getAllServices);
} catch (e) {
  console.error('Error fetching services for solution:', e);
  allServices = [];
}
const relatedServices = allServices.filter(
  (s: any) =>
    safeSolution.relatedServices?.includes(s.slug) ||
    s.solutions?.includes(safeSolution.slug)
);

const title = safeSolution.meta_title || `Seguridad para ${safeSolution.name} | Guardman Chile`;
const description = safeSolution.meta_description || safeSolution.description;
const ogImage = safeSolution.og_image || `${Astro.url.origin}/og/solutions/${slug}.png`;
---

<BaseLayout title={title} description={description} ogImage={ogImage}>
  <!-- Hero de la Solución -->
  <section class="relative bg-black py-20 px-4 overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute inset-0 bg-gradient-to-b from-black via-transparent to-black z-10"></div>
      <img src="https://images.unsplash.com/photo-1557597774-9d2739f85a76?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80" alt="" class="w-full h-full object-cover grayscale" />
    </div>

    <Container class="relative z-20">
      <Breadcrumbs items={[
        { name: 'Soluciones', url: '/soluciones' },
        { name: safeSolution.name }
      ]} />

      <div class="max-w-4xl">
        <h1 class="text-4xl md:text-6xl font-semibold text-white mb-8 tracking-tight leading-[1.1]">
          Especialidad en<br/>
          <span class="text-white/40 italic">{safeSolution.name}</span>
        </h1>
        <p class="text-lg md:text-xl text-white/50 mb-12 max-w-2xl leading-relaxed">
          {safeSolution.description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <Button href="/cotizar" variant="accent" size="lg" class="bg-white text-black hover:bg-gray-100 border-none">
            Consultar ahora
          </Button>
        </div>
      </div>
    </Container>
  </section>

  <!-- Desafíos / Pain Points -->
  <ChallengesSection
    subtitle="Puntos críticos que resolvemos en su sector."
    challenges={safeSolution.challenges || []}
  />

  <!-- Soluciones -->
  <SolutionsListSection
    subtitle={`Protocolos especializados para ${safeSolution.name}.`}
    solutions={safeSolution.solutions || []}
    background="gray"
  />

  <!-- Servicios Relacionados -->
  {relatedServices.length > 0 && (
    <RelatedServicesSection
      title={`Servicios para ${safeSolution.name}`}
      services={relatedServices.map((s: any) => ({
        title: s.title,
        description: s.description,
        slug: s.slug
      }))}
    />
  )}

  <!-- CTA -->
  <CTASection
    headline="Asegure su operación industrial"
    headlineAccent="industrial"
    subtitle={`Nuestros asesores diseñarán un plan de seguridad específico para las necesidades de ${safeSolution.name}.`}
    primaryButton={{
      text: 'Solicitar análisis de riesgo',
      href: '/cotizar'
    }}
    secondaryButton={{
      text: 'Contactar vía WhatsApp',
      href: `https://wa.me/${site.phone.replace(/\D/g, '')}?text=${encodeURIComponent(`Hola, necesito seguridad para ${safeSolution.name}`)}`,
      variant: 'outline'
    }}
  />
</BaseLayout>
