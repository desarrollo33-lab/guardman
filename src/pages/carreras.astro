---
/**
 * Careers Page - Job listings and employment opportunities
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import Button from '@/components/ui/Button.astro';
import Icon from '@/components/ui/Icon.astro';
import Breadcrumbs from '@/components/ui/Breadcrumbs.astro';
import { getWhatsAppUrl } from '@/data/site';

const benefits = [
  {
    title: 'Estabilidad Laboral',
    description: 'Contratos formales con todas las prestaciones de ley.',
    icon: 'shield-check',
  },
  {
    title: 'Capacitación Continua',
    description: 'Certificación OS10 y entrenamiento permanente.',
    icon: 'academic-cap',
  },
  {
    title: 'Buen Ambiente',
    description: 'Equipo profesional y ambiente de trabajo respetuoso.',
    icon: 'users',
  },
  {
    title: 'Competitivo',
    description: 'Remuneraciones competitivas según el mercado.',
    icon: 'currency-dollar',
  },
  {
    title: 'Crecimiento',
    description: 'Oportunidades de desarrollo y ascenso interno.',
    icon: 'arrow-trending-up',
  },
];

const jobs = [
  {
    title: 'Guardia de Seguridad OS10',
    type: 'Tiempo Completo',
    location: 'Santiago, RM',
    description: 'Vigilancia, control de acceso y rondas en instalaciones de clientes. Certificación OS10 vigente requerida.',
    requirements: ['Certificación OS10 vigente', 'Antecedentes intachables', 'Disponibilidad de turnos', 'RUT chileno vigente'],
  },
  {
    title: 'Supervisor de Turno',
    type: 'Tiempo Completo',
    location: 'Santiago, RM',
    description: 'Coordinación de equipos de guardias, elaboración de reportes y atención a clientes.',
    requirements: ['Experiencia mínima 3 años', 'Certificación OS10', 'Liderazgo de equipos', 'Conductores de vehículos'],
  },
  {
    title: 'Operador de Monitoreo',
    type: 'Tiempo Completo',
    location: 'Santiago, RM',
    description: 'Monitoreo de sistemas CCTV, gestión de alarmas y coordinación de respuestas.',
    requirements: ['Experiencia en monitoreo', 'Conocimiento CCTV', 'Disponibilidad 24/7', 'Manejo de crisis'],
  },
  {
    title: 'Jefe de Operaciones',
    type: 'Tiempo Completo',
    location: 'Santiago, RM',
    description: 'Gestión integral de operaciones, relación con clientes y supervisión de personal.',
    requirements: ['Experiencia 5+ años en seguridad', 'Gestión de equipos', 'Atención a clientes', 'Disponibilidad'],
  },
];
---

<BaseLayout
  title="Trabaja con Nosotros | Guardman Chile"
  description="Únete al equipo Guardman. Oportunidades laborales en seguridad privada con estabilidad, capacitación continua y crecimiento profesional."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-black py-20 md:py-32">
    <!-- Background layer -->
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-black/80 z-10"></div>
      <img 
        src="https://images.unsplash.com/photo-1543269865-cbf427effbad?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80" 
        alt="Equipo de Seguridad"
        class="w-full h-full object-cover grayscale opacity-30"
      />
    </div>
    
    <Container class="relative z-20">
      <Breadcrumbs items={[{ name: 'Carreras' }]} />

      <div class="max-w-4xl text-center md:text-left">
        
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/5 border border-white/10 backdrop-blur-sm mb-8">
          <span class="w-1.5 h-1.5 rounded-full bg-white animate-pulse"></span>
          <span class="text-xs text-white/70 uppercase tracking-widest font-medium">Oportunidades de Despliegue</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-semibold text-white mb-6 tracking-tight leading-[1.1]">
          Evolucione con<br/>
          <span class="text-white/40 italic">Nosotros</span>
        </h1>

        <p class="text-lg md:text-xl text-white/60 mb-10 max-w-2xl leading-relaxed">
          Forme parte de una organización líder en <span class="text-white font-medium">seguridad táctica</span> con estándares operativos de excelencia internacional.
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <Button href="#vacantes" variant="primary" size="lg" class="bg-white text-black hover:bg-gray-100 border-none transition-all">
            Ver Vacantes
          </Button>
          <Button
            href={getWhatsAppUrl('Hola, quiero información sobre las vacantes en Guardman')}
            variant="outline"
            size="lg"
            target="_blank"
            class="px-8 border-white/20 hover:bg-white/5 text-white"
          >
            WhatsApp Operaciones
          </Button>
        </div>
      </div>
    </Container>
  </section>

  <!-- Benefits Section -->
  <Section background="white">
    <Container>
      <div class="mb-16">
        <h2 class="text-3xl md:text-5xl font-semibold text-gray-900 mb-6 tracking-tight">Estándar Operativo</h2>
        <p class="text-gray-500 text-lg max-w-2xl leading-relaxed">
          Propuesta de valor para los profesionales que buscan excelencia en el sector de seguridad.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-5 gap-6">
        {benefits.map((benefit) => (
          <div class="p-8 border border-gray-100 rounded-xl hover:border-black transition-all group bg-gray-50/30">
            <div class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center mb-6 group-hover:bg-black group-hover:text-white transition-colors">
              <Icon name={benefit.icon} size="xs" />
            </div>
            <h3 class="text-sm font-bold text-gray-900 mb-2 uppercase tracking-widest">{benefit.title}</h3>
            <p class="text-gray-400 text-xs leading-relaxed">{benefit.description}</p>
          </div>
        ))}
      </div>
    </Container>
  </Section>

  <!-- Job Listings Section -->
  <Section background="gray" id="vacantes">
    <Container>
      <div class="mb-16">
        <h2 class="text-3xl md:text-5xl font-semibold text-gray-900 mb-6 tracking-tight tracking-tight">Células Disponibles</h2>
        <p class="text-gray-500 text-lg max-w-xl leading-relaxed">
          {jobs.length} posiciones abiertas para despliegue inmediato en la corporación.
        </p>
      </div>

      <div class="space-y-4 max-w-5xl">
        {jobs.map((job) => (
          <div class="bg-white border border-gray-100 rounded-xl p-8 hover:border-black transition-all">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8">
              <div class="flex-1">
                <div class="flex items-center gap-4 mb-3">
                  <h3 class="text-xl font-bold text-gray-900 uppercase tracking-widest">{job.title}</h3>
                  <span class="px-2 py-0.5 bg-black text-white text-[10px] font-bold uppercase tracking-widest rounded">
                    {job.type}
                  </span>
                </div>
                <div class="flex items-center gap-2 text-gray-400 text-[10px] font-bold uppercase tracking-widest mb-6 border-b border-gray-50 pb-4">
                  <Icon name="map-pin" size="xs" />
                  <span>{job.location}</span>
                </div>
                <p class="text-gray-500 text-sm mb-8 max-w-2xl leading-relaxed">{job.description}</p>
                
                <div class="grid sm:grid-cols-2 gap-4">
                  {job.requirements.map((req) => (
                    <div class="flex items-center gap-3 text-[11px] text-gray-400 uppercase font-medium">
                      <div class="w-1 h-1 bg-black rounded-full"></div>
                      {req}
                    </div>
                  ))}
                </div>
              </div>
              
              <div class="shrink-0">
                <Button href="/cotizar" variant="primary" size="lg" class="bg-black text-white hover:bg-gray-900 border-none transition-all px-10 text-xs tracking-widest uppercase">
                  Aplicar Despliegue
                </Button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section background="dark" class="relative overflow-hidden py-24">
    <Container>
      <div class="relative max-w-5xl mx-auto text-center">
        <h2 class="text-3xl md:text-6xl font-semibold text-white mb-10 tracking-tight leading-tight">
          ¿No encuentra la posición <span class="italic text-white/40">ideal</span>?
        </h2>
        
        <p class="text-lg md:text-xl text-white/50 mb-14 max-w-2xl mx-auto leading-relaxed">
          Invierta en su futuro profesional. Envíe sus antecedentes para futuras activaciones tácticas de reclutamiento.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contacto" variant="primary" size="lg" class="bg-white text-black hover:bg-gray-100 border-none transition-all px-12 font-bold tracking-widest text-xs uppercase">
            Enviar CV
          </Button>
          <Button
            href={getWhatsAppUrl('Hola, quiero enviar mi CV')}
            target="_blank"
            variant="outline"
            size="lg"
            class="px-12 border-white/20 hover:bg-white/5 text-white transition-all font-semibold"
          >
            Consulta WhatsApp
          </Button>
        </div>
      </div>
    </Container>
  </Section>
</BaseLayout>
