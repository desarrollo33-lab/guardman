---
import BaseLayout from '../layouts/BaseLayout.astro';
import ConvexLeadForm from '../components/forms/ConvexLeadForm';
import Breadcrumbs from '../components/ui/Breadcrumbs.astro';
import Container from '../components/ui/Container.astro';
import Button from '../components/ui/Button.astro';
import { getWhatsAppUrl } from '../data/site';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Cotizar Servicios de Seguridad - Guardman Chile',
  description:
    'Obtén una cotización rápida y gratuita para servicios de seguridad privada. Guardias OS10, alarmas, patrullaje.',
  mainEntity: {
    '@type': 'Service',
    serviceType: 'Seguridad Privada',
    provider: {
      '@type': 'LocalBusiness',
      name: 'Guardman Chile',
    },
  },
};
---

<BaseLayout
  title="Cotizar Seguridad Privada en Santiago | Guardman Chile"
  description="Obtén tu cotización gratuita en minutos. Guardias OS10, alarmas Ajax, patrullaje de condominios en Santiago y toda la Región Metropolitana. Sin compromiso."
  schema={schema}
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-black py-20 md:py-32">
    <!-- Background layer -->
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-black/80 z-10"></div>
      <img 
        src="https://images.unsplash.com/photo-1557597774-9d273605dfa9?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80" 
        alt="Centro de Mando"
        class="w-full h-full object-cover grayscale opacity-30"
      />
    </div>
    
    <Container class="relative z-20">
      <Breadcrumbs items={[{ name: 'Cotizar' }]} />

      <div class="max-w-3xl">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/5 border border-white/10 backdrop-blur-sm mb-8">
          <span class="w-1.5 h-1.5 rounded-full bg-white animate-pulse"></span>
          <span class="text-[10px] text-white/70 uppercase tracking-widest font-bold">Respuesta Técnica 12H</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-semibold text-white mb-6 tracking-tight leading-[1.1]">
          Cotice su<br/>
          <span class="text-white/40 italic">Seguridad</span>
        </h1>

        <p class="text-lg md:text-xl text-white/60 mb-10 max-w-2xl leading-relaxed">
          Inicie el protocolo de auditoría táctica. Reciba una propuesta de <span class="text-white font-medium">despliegue operativo</span> adaptada a sus requerimientos críticos.
        </p>

        <!-- Trust indicators -->
        <div class="flex flex-wrap gap-x-12 gap-y-6 mt-16 pt-10 border-t border-white/10 opacity-30">
          <div class="flex items-center gap-3">
             <div class="w-1.5 h-1.5 rounded-full bg-white"></div>
             <span class="text-[10px] uppercase tracking-[0.3em] font-bold text-white">Sin Compromiso</span>
          </div>
          <div class="flex items-center gap-3">
             <div class="w-1.5 h-1.5 rounded-full bg-white"></div>
             <span class="text-[10px] uppercase tracking-[0.3em] font-bold text-white">+500 Activaciones</span>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Form Section -->
  <section class="py-24 bg-white">
    <Container>
      <div class="max-w-2xl mx-auto">
        <!-- Form Card -->
        <div class="bg-white border border-gray-100 rounded-xl p-8 md:p-12 hover:border-black transition-all duration-500 shadow-sm overflow-hidden">
          <div class="mb-10 text-center">
             <h2 class="text-2xl font-semibold text-gray-900 mb-4 tracking-tight">Formulario de Requerimientos</h2>
             <p class="text-gray-400 text-sm">Ingrese sus datos para una evaluación técnica preliminar.</p>
          </div>
          <ConvexLeadForm client:only="react" source="cotizar" />
        </div>

        <!-- WhatsApp Alternative -->
        <div class="mt-16 text-center">
          <p class="text-xs font-bold text-gray-300 uppercase tracking-[0.3em] mb-8">Canal Directo Operativo</p>
          <Button
            href={getWhatsAppUrl('Hola, necesito una cotización estratégica para servicios de seguridad')}
            target="_blank"
            variant="primary"
            class="bg-black text-white px-12 py-4 rounded-xl font-bold tracking-widest text-xs uppercase transition-all hover:bg-gray-900 border-none inline-flex items-center gap-3"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
            </svg>
            Despliegue Vía WhatsApp
          </Button>
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('active');
        }
      });
    },
    { threshold: 0.1 }
  );

  document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
</script>
