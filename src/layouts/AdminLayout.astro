---
import { AuthProvider } from '../lib/auth';
import LogoutButton from '../components/admin/LogoutButton';

interface Props {
  title: string;
}

const { title } = Astro.props;
const fullTitle = `${title} | Admin - Guardman`;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{fullTitle}</title>
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="min-h-screen bg-gray-100 font-sans antialiased">
    <AuthProvider client:only="react">
      <!-- Admin Header -->
      <header class="bg-gray-900 text-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            <div class="flex items-center gap-4">
              <a href="/admin" class="text-xl font-bold hover:text-gray-300 transition-colors">
                Guardman Admin
              </a>
            </div>
            
            <nav class="flex items-center gap-2">
              <a 
                href="/admin" 
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                Dashboard
              </a>
              <a 
                href="/admin/leads" 
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                Leads
              </a>
              <a 
                href="/admin/services" 
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                Servicios
              </a>
              <a
                href="/admin/solutions"
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                Soluciones
              </a>
              <a
                href="/admin/heroes"
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                Heroes
              </a>
              <a
                href="/admin/blog"
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                Blog
              </a>
              <a
                href="/admin/faqs"
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                FAQs
              </a>
              <a
                href="/admin/team"
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                Equipo
              </a>
              <a
                href="/admin/testimonials"
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                Testimonios
              </a>
              <a
                href="/admin/communes"
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                Comunas
              </a>
              <a
                href="/admin/partners"
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                Partners
              </a>
              <a 
                href="/admin/config" 
                class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                Config
              </a>
              <LogoutButton client:load />
            </nav>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </main>

      <!-- Admin Footer -->
      <footer class="bg-gray-800 text-gray-400 py-4 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-sm">
          Guardman Chile - Panel de Administraci√≥n
        </div>
      </footer>
    </AuthProvider>
  </body>
</html>
