---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getConvexServer } from "../../lib/convex";

export const prerender = false;

// Get params from URL
const { slug } = Astro.params;

// Validate params exist
if (!slug) {
  return Astro.redirect("/404");
}

// Get Convex client
const convex = await getConvexServer();
if (!convex) {
  return Astro.redirect("/404");
}

// Fetch commune by slug from Convex
let commune = null;
let serviceLocations = [];

try {
  commune = await convex.query("locations:getCommuneBySlug", { slug });
  serviceLocations = await convex.query("service_locations:getServiceLocations", { communeSlug: slug });
} catch (error) {
  console.error("Error fetching commune:", error);
}

// 404 if not found
if (!commune) {
  return Astro.redirect("/404");
}

// Fetch services offered in this commune
let services = [];
try {
  const allServices = await convex.query("services:getAllServices");
  // Get service slugs from service_locations
  const serviceSlugs = [...new Set(serviceLocations.map((sl: any) => sl.service_slug))];
  services = allServices.filter((s: any) => serviceSlugs.includes(s.slug));
} catch (error) {
  console.error("Error fetching services:", error);
}

// Generate meta tags
const metaTitle = commune.meta_title || `Seguridad en ${commune.name} | Guardman Chile`;
const metaDescription = commune.meta_description || `Servicios de seguridad privada en ${commune.name}. Cobertura total en esta comuna.`;
---

<BaseLayout
  title={metaTitle}
  description={metaDescription}
>
  <!-- Breadcrumb -->
  <nav class="bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 py-3 text-sm">
        <li>
          <a href="/" class="text-gray-500 hover:text-gray-700">Inicio</a>
        </li>
        <li class="text-gray-400">/</li>
        <li>
          <a href="/cobertura" class="text-gray-500 hover:text-gray-700">Cobertura</a>
        </li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">{commune.name}</li>
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-green-900 to-green-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Seguridad en {commune.name}
      </h1>
      <p class="text-xl text-green-100 mb-6">
        Cobertura total en {commune.name} y alrededores
      </p>
      <p class="text-lg text-green-50 max-w-3xl">
        Servicios de seguridad privada con presencia permanente en {commune.name}. 
        Guardias certificados OS10, patrullaje y sistemas de alarma disponibles.
      </p>
    </div>
  </section>

  <!-- Zone Info -->
  {commune.zone && (
    <section class="py-8 bg-gray-50 border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center gap-2 text-sm">
          <span class="text-gray-500">Zona:</span>
          <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full font-medium capitalize">
            {commune.zone}
          </span>
        </div>
      </div>
    </section>
  )}

  <!-- Services Section -->
  {services && services.length > 0 ? (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold mb-8 text-center">
          Servicios disponibles en {commune.name}
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {services.map((service: any) => (
            <a 
              href={`/servicios/${service.slug}`}
              class="block p-6 bg-gray-50 rounded-lg hover:bg-green-50 hover:shadow-md transition group"
            >
              <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-green-700">
                {service.title}
              </h3>
              <p class="text-gray-600 text-sm line-clamp-2">
                {service.description}
              </p>
              {service.tagline && (
                <p class="text-green-600 text-sm mt-2 font-medium">
                  {service.tagline}
                </p>
              )}
            </a>
          ))}
        </div>
      </div>
    </section>
  ) : (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <p class="text-gray-600">
          Contáctanos para conocer los servicios disponibles en {commune.name}
        </p>
      </div>
    </section>
  )}

  <!-- Coverage CTA -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold mb-8 text-center">
        ¿Necesitas seguridad en {commune.name}?
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-sm text-center">
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Respuesta Rápida</h3>
          <p class="text-sm text-gray-600">Acudimos a tu llamado en minutos</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm text-center">
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Personal Certificado</h3>
          <p class="text-sm text-gray-600">Guardias OS10 vigentes</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm text-center">
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">Atención 24/7</h3>
          <p class="text-sm text-gray-600">Siempre disponibles</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-green-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Solicita una cotización en {commune.name}
      </h2>
      <p class="text-xl text-green-100 mb-8">
        Te respondemos en menos de 2 horas
      </p>
      <a 
        href="/contacto"
        class="inline-block bg-white text-green-700 font-semibold px-8 py-4 rounded-lg hover:bg-gray-100 transition"
      >
        Contactar Ahora
      </a>
    </div>
  </section>
</BaseLayout>
