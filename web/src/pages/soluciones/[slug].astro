---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getConvexServer } from "../../lib/convex";

export const prerender = false;

// Get params from URL
const { slug } = Astro.params;

// Validate params exist
if (!slug) {
  return Astro.redirect("/404");
}

// Get Convex client
const convex = await getConvexServer();
if (!convex) {
  return Astro.redirect("/404");
}

// Fetch solution by slug from Convex
let solution = null;
try {
  solution = await convex.query("solutions:getSolutionBySlug", { slug });
} catch (error) {
  console.error("Error fetching solution:", error);
}

// 404 if not found
if (!solution) {
  return Astro.redirect("/404");
}

// Generate meta tags
const metaTitle = solution.meta_title || `${solution.title} | Guardman Chile`;
const metaDescription = solution.meta_description || solution.description;
---

<BaseLayout
  title={metaTitle}
  description={metaDescription}
>
  <!-- Breadcrumb -->
  <nav class="bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 py-3 text-sm">
        <li>
          <a href="/" class="text-gray-500 hover:text-gray-700">Inicio</a>
        </li>
        <li class="text-gray-400">/</li>
        <li>
          <a href="/soluciones" class="text-gray-500 hover:text-gray-700">Soluciones</a>
        </li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">{solution.title}</li>
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-green-900 to-green-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {solution.icon && (
        <div class="mb-6">
          <span class="text-6xl">{solution.icon}</span>
        </div>
      )}
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        {solution.title}
      </h1>
      <p class="text-lg text-green-50 max-w-3xl">
        {solution.description}
      </p>
    </div>
  </section>

  <!-- Challenges Section -->
  {solution.challenges && solution.challenges.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold mb-8 text-center">Desafíos que enfrentamos</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {solution.challenges.map((challenge: string) => (
            <div class="flex items-start gap-3 p-4 bg-white rounded-lg shadow-sm">
              <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              <span class="text-gray-700">{challenge}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Features Section -->
  {solution.features && solution.features.length > 0 && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold mb-8 text-center">¿Qué incluye nuestra solución?</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {solution.features.map((feature: string) => (
            <div class="flex items-start gap-3 p-4 bg-gray-50 rounded-lg">
              <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">{feature}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Benefits Section -->
  {solution.benefits && solution.benefits.length > 0 && (
    <section class="py-16 bg-green-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold mb-8 text-center">Beneficios de nuestra solución</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {solution.benefits.map((benefit: string) => (
            <div class="flex items-center gap-3 p-4 bg-white rounded-lg shadow-sm">
              <svg class="w-8 h-8 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-lg text-gray-700">{benefit}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Industries Section -->
  {solution.industries && solution.industries.length > 0 && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold mb-8 text-center">Industrias que Atendemos</h2>
        <div class="flex flex-wrap justify-center gap-3">
          {solution.industries.map((industry: string) => (
            <a 
              href={`/soluciones/${industry}`}
              class="px-4 py-2 bg-green-50 text-green-700 rounded-full font-medium hover:bg-green-100 transition"
            >
              {industry}
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Related Services Section -->
  {solution.relatedServices && solution.relatedServices.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold mb-8 text-center">Servicios Relacionados</h2>
        <div class="flex flex-wrap justify-center gap-3">
          {solution.relatedServices.map((service: string) => (
            <a 
              href={`/servicios/${service}`}
              class="px-4 py-2 bg-blue-50 text-blue-700 rounded-full font-medium hover:bg-blue-100 transition"
            >
              {service}
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-16 bg-green-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        ¿Necesitas nuestra solución de {solution.title}?
      </h2>
      <p class="text-xl text-green-100 mb-8">
        Contáctanos hoy y recibe una cotización personalizada
      </p>
      <a 
        href="/contacto"
        class="inline-block bg-white text-green-700 font-semibold px-8 py-4 rounded-lg hover:bg-gray-100 transition"
      >
        Solicitar Cotización
      </a>
    </div>
  </section>
</BaseLayout>
