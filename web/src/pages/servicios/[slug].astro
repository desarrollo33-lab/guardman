---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getConvexServer } from "../../lib/convex";

export const prerender = false;

// Get params from URL
const { slug } = Astro.params;

// Validate params exist
if (!slug) {
  return Astro.redirect("/404");
}

// Get Convex client
const convex = await getConvexServer();
if (!convex) {
  return Astro.redirect("/404");
}

// Fetch service by slug from Convex
let service = null;
try {
  service = await convex.query("services:getServiceBySlug", { slug });
} catch (error) {
  console.error("Error fetching service:", error);
}

// 404 if not found
if (!service) {
  return Astro.redirect("/404");
}

// Generate meta tags
const metaTitle = service.meta_title || `${service.title} | Guardman Chile`;
const metaDescription = service.meta_description || service.description;
---

<BaseLayout
  title={metaTitle}
  description={metaDescription}
>
  <!-- Breadcrumb -->
  <nav class="bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 py-3 text-sm">
        <li>
          <a href="/" class="text-gray-500 hover:text-gray-700">Inicio</a>
        </li>
        <li class="text-gray-400">/</li>
        <li>
          <a href="/servicios" class="text-gray-500 hover:text-gray-700">Servicios</a>
        </li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">{service.title}</li>
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-green-900 to-green-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        {service.title}
      </h1>
      {service.tagline && (
        <p class="text-xl text-green-100 mb-6">{service.tagline}</p>
      )}
      <p class="text-lg text-green-50 max-w-3xl">
        {service.description}
      </p>
    </div>
  </section>

  <!-- Features Section -->
  {service.features && service.features.length > 0 && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold mb-8 text-center">¿Qué incluye nuestro servicio?</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {service.features.map((feature: string) => (
            <div class="flex items-start gap-3 p-4 bg-gray-50 rounded-lg">
              <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">{feature}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Benefits Section -->
  {service.benefits && service.benefits.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold mb-8 text-center">Beneficios de contratar nuestro servicio</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {service.benefits.map((benefit: string) => (
            <div class="flex items-center gap-3 p-4 bg-white rounded-lg shadow-sm">
              <svg class="w-8 h-8 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-lg text-gray-700">{benefit}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Solutions Section -->
  {service.solutions && service.solutions.length > 0 && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold mb-8 text-center">Sectores que atenciones</h2>
        <div class="flex flex-wrap justify-center gap-3">
          {service.solutions.map((solution: string) => (
            <a 
              href={`/soluciones/${solution}`}
              class="px-4 py-2 bg-green-50 text-green-700 rounded-full font-medium hover:bg-green-100 transition"
            >
              {solution}
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-16 bg-green-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        ¿Necesitas {service.title}?
      </h2>
      <p class="text-xl text-green-100 mb-8">
        Contáctanos hoy y recibe una cotización personalizada
      </p>
      <a 
        href="/contacto"
        class="inline-block bg-white text-green-700 font-semibold px-8 py-4 rounded-lg hover:bg-gray-100 transition"
      >
        Solicitar Cotización
      </a>
    </div>
  </section>
</BaseLayout>
