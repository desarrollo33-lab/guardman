---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getConvexServer } from "../../lib/convex";

export const prerender = false;

// Get Convex client
const convex = await getConvexServer();
let services = [];
let error = null;

if (convex) {
  try {
    services = await convex.query("services:getAllServices", {});
  } catch (e: any) {
    console.error("Error fetching services:", e);
    error = e.message;
  }
} else {
  error = "Convex client not available";
}
---

<BaseLayout
  title="Servicios de Seguridad | Guardman Chile"
  description="Servicios profesionales de seguridad privada en Chile. Guardia de seguridad, electrónico, corporativo y más."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-green-900 to-green-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Nuestros Servicios de Seguridad
      </h1>
      <p class="text-xl text-green-100 max-w-3xl">
        Ofrecemos soluciones integrales de seguridad adaptadas a tus necesidades. 
        Profesionales capacitados y tecnología de vanguardia.
      </p>
    </div>
  </section>

  {error && (
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 mx-auto max-w-7xl my-8">
      <p>Error cargando servicios: {error}</p>
    </div>
  )}

  {/* Services Grid */}
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {services.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {services.map((service) => (
            <a 
              href={`/servicios/${service.slug}`}
              class="block bg-white rounded-xl shadow-sm hover:shadow-lg transition overflow-hidden group"
            >
              {service.icon && (
                <div class="bg-green-50 p-6 text-center">
                  <span class="text-5xl">{service.icon}</span>
                </div>
              )}
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-green-600 transition">
                  {service.title}
                </h3>
                {service.tagline && (
                  <p class="text-gray-600 mb-4">{service.tagline}</p>
                )}
                <p class="text-gray-500 text-sm line-clamp-3">
                  {service.description}
                </p>
                <div class="mt-4 text-green-600 font-medium flex items-center gap-1">
                  Ver más 
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500">No hay servicios disponibles en este momento.</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-green-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        ¿Necesitas un servicio de seguridad?
      </h2>
      <p class="text-xl text-green-100 mb-8">
        Contáctanos hoy y recibe una cotización personalizada
      </p>
      <a 
        href="/contacto"
        class="inline-block bg-white text-green-700 font-semibold px-8 py-4 rounded-lg hover:bg-gray-100 transition"
      >
        Solicitar Cotización
      </a>
    </div>
  </section>
</BaseLayout>
