---
/**
 * Card Component
 * Clean, elevated card with optional icon, badge, and link.
 */

interface Props {
  title: string;
  description?: string;
  icon?: string;
  href?: string;
  badge?: string;
  badgeVariant?: 'default' | 'success' | 'warning' | 'outline';
  class?: string;
}

const {
  title,
  description,
  icon,
  href,
  badge,
  badgeVariant = 'default',
  class: className = '',
} = Astro.props;

const isInteractive = !!href;

const baseClasses = [
  'group relative bg-white rounded-xl',
  'shadow-card hover:shadow-elevated',
  'transition-all duration-300 ease-out',
  isInteractive ? 'cursor-pointer' : '',
].join(' ');

const interactiveClasses = isInteractive ? 'hover:-translate-y-1' : '';
---

<article class:list={[baseClasses, interactiveClasses, className]}>
  {/* Badge */}
  {
    badge && (
      <div class="absolute top-4 right-4">
        <span
          class={`inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium
        ${badgeVariant === 'success' ? 'bg-gray-900 text-white' : ''}
        ${badgeVariant === 'warning' ? 'bg-gray-200 text-gray-800' : ''}
        ${badgeVariant === 'outline' ? 'bg-transparent border border-gray-300 text-gray-700' : ''}
        ${badgeVariant === 'default' ? 'bg-gray-100 text-gray-700' : ''}
      `}
        >
          {badge}
        </span>
      </div>
    )
  }

  {/* Icon */}
  {
    icon && (
      <div class="mb-4 text-gray-900">
        <svg
          class="w-10 h-10"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="1.5"
        >
          {icon === 'shield-check' && (
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"
            />
          )}
          {icon === 'bell-alert' && (
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0"
            />
          )}
          {icon === 'camera' && (
            <>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6.827 6.175A2.31 2.31 0 015.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 00-1.134-.175 2.31 2.31 0 01-1.64-1.055l-.822-1.316a2.192 2.192 0 00-1.736-1.039 48.774 48.774 0 00-5.232 0 2.192 2.192 0 00-1.736 1.039l-.821 1.316z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M16.5 12.75a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zM18.75 10.5h.008v.008h-.008V10.5z"
              />
            </>
          )}
          {icon === 'drone' && (
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18"
            />
          )}
          {icon === 'key' && (
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z"
            />
          )}
          {icon === 'users' && (
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z"
            />
          )}
          {icon === 'map-pin' && (
            <>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
              />
            </>
          )}
          {icon === 'phone' && (
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
            />
          )}
          {icon === 'mail' && (
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
            />
          )}
        </svg>
      </div>
    )
  }

  {/* Content */}
  <div class="p-6">
    <h3
      class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-gray-600 transition-colors"
    >
      {title}
    </h3>

    {
      description && (
        <p class="text-gray-600 text-sm leading-relaxed">{description}</p>
      )
    }

    {/* Link indicator */}
    {
      href && (
        <div class="mt-4 flex items-center text-gray-900 font-medium text-sm group-hover:gap-3 gap-2 transition-all">
          <span>Conocer m√°s</span>
          <svg
            class="w-4 h-4 transition-transform group-hover:translate-x-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
            />
          </svg>
        </div>
      )
    }
  </div>

  {/* Clickable overlay */}
  {
    href && (
      <a href={href} class="absolute inset-0 z-10" aria-label={title}>
        <span class="sr-only">{title}</span>
      </a>
    )
  }
</article>
