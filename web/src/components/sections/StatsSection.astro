---
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';

interface Stat {
  value: string;
  label: string;
  prefix?: string;
  suffix?: string;
}

interface Props {
  stats: Stat[];
  title?: string;
  background?: 'white' | 'gray' | 'dark' | 'primary';
}

const { stats, title, background = 'dark' } = Astro.props;
---

<Section background={background} class="border-t border-white/10">
  <Container>
    {
      title && (
        <h2 class="text-2xl md:text-3xl font-bold text-center mb-12 text-white/90 tracking-wide uppercase">
          {title}
        </h2>
      )
    }

    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12">
      {stats.map((stat) => (
        <div class="text-center group p-4 rounded-xl hover:bg-white/5 transition-colors">
          <p class="text-4xl md:text-6xl font-bold text-blue-500 mb-3 tracking-tighter group-hover:scale-110 transition-transform duration-500">
            {stat.prefix}{stat.value}{stat.suffix}
          </p>
          <p class="text-gray-400 text-sm md:text-base font-medium uppercase tracking-widest">
            {stat.label}
          </p>
        </div>
      ))}
    </div>
  </Container>
</Section>
