---
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';
import Button from '../ui/Button.astro';
import Icon from '../ui/Icon.astro';

interface CTA {
  title: string;
  description: string;
  buttonText: string;
  buttonHref: string;
  icon?: string;
}

interface Props {
  leftCta: CTA;
  rightCta: CTA;
}

const { leftCta, rightCta } = Astro.props;
---

<Section background="gray">
  <Container>
    <div class="grid md:grid-cols-2 gap-8">
      {/* Left CTA - Light */}
      <div
        class="bg-white rounded-3xl p-8 md:p-12 shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
      >
        {
          leftCta.icon && (
            <div class="w-14 h-14 rounded-2xl bg-blue-50 flex items-center justify-center mb-8">
              <Icon name={leftCta.icon} class="w-8 h-8 text-blue-700" />
            </div>
          )
        }
        <h2 class="text-3xl font-bold text-gray-900 mb-4 tracking-tight">
          {leftCta.title}
        </h2>
        <p class="text-lg text-gray-600 mb-10 leading-relaxed">
          {leftCta.description}
        </p>
        <Button href={leftCta.buttonHref} variant="primary" size="lg" class="w-full md:w-auto">
          {leftCta.buttonText}
        </Button>
      </div>

      {/* Right CTA - Dark */}
      <div
        class="bg-gray-900 rounded-3xl p-8 md:p-12 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-800"
      >
        {
          rightCta.icon && (
            <div class="w-14 h-14 rounded-2xl bg-white/10 flex items-center justify-center mb-8 backdrop-blur-sm">
              <Icon name={rightCta.icon} class="w-8 h-8 text-white" />
            </div>
          )
        }
        <h2 class="text-3xl font-bold text-white mb-4 tracking-tight">
          {rightCta.title}
        </h2>
        <p class="text-lg text-gray-400 mb-10 leading-relaxed">
          {rightCta.description}
        </p>
        <Button
          href={rightCta.buttonHref}
          variant="outline"
          size="lg"
          class="w-full md:w-auto border-white text-white hover:bg-white hover:text-gray-900"
        >
          {rightCta.buttonText}
        </Button>
      </div>
    </div>
  </Container>
</Section>
